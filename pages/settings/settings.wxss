/* pages/settings/settings.wxss */
.home_down {
  margin-top: 50rpx;
  display: flex;
  flex-direction: column;
}

.home_down_item {
  margin: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.home_down_item_left {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.home_down_item_png {
  margin: 0rpx 20rpx 0rpx 10rpx;
  width: 40rpx;
  height: 40rpx;
}
.home_down_item_arrow {
  width: 20rpx;
  height: 20rpx;
  margin: 10rpx;
}

.down_item_text {
  color: gray;
}

/***********/

.intro {
  margin: 30px;
  text-align: center;
}

.animation-element-wrapper {
  display: flex;  
  position: fixed;
  left: 0;
  top:0;
  height: 100%;
  width: 100%;
  background-color: rgba(0, 0, 0, 0.6);
}

.animation-element {
  display: flex;
  flex-direction: column;
  position: fixed;
  width: 100%;
  height: 470rpx;
  bottom: 0;
  background-color: rgba(255, 255, 255, 1);
}

.top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin: 10rpx
}

.left-bt{
  margin: 10rpx;
}
.right-bt {
  margin: 10rpx;
}

.line{
  border: gray 1rpx solid;
  width: 100%;
  margin-bottom: 30rpx;
}